# ZOARK OS Production Environment Configuration

# Database
DATABASE_URL=postgresql://zoark_user:CHANGE_ME_STRONG_PASSWORD@postgres:5432/zoark_os
DB_USER=zoark_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Redis
REDIS_URL=redis://:CHANGE_ME_REDIS_PASSWORD@redis:6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# JWT & Security
JWT_SECRET=CHANGE_ME_GENERATE_RANDOM_SECRET_KEY_MIN_32_CHARS
JWT_ALGORITHM=HS256
JWT_EXPIRATION=900
ENCRYPTION_KEY=CHANGE_ME_GENERATE_FERNET_KEY

# API Configuration
NEXT_PUBLIC_API_URL=https://api.zoark-os.com
CORS_ORIGIN=https://zoark-os.com,https://www.zoark-os.com

# LLM & AI Services
OPENAI_API_KEY=sk-CHANGE_ME_YOUR_OPENAI_KEY
ANTHROPIC_API_KEY=sk-ant-CHANGE_ME_YOUR_ANTHROPIC_KEY
HUGGINGFACE_API_KEY=hf_CHANGE_ME_YOUR_HF_KEY

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=CHANGE_ME_YOUR_EMAIL
SMTP_PASSWORD=CHANGE_ME_YOUR_APP_PASSWORD
SENDGRID_API_KEY=SG.CHANGE_ME_YOUR_SENDGRID_KEY

# OAuth Configuration
GOOGLE_CLIENT_ID=CHANGE_ME_YOUR_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=CHANGE_ME_YOUR_GOOGLE_CLIENT_SECRET
GOOGLE_REDIRECT_URI=https://api.zoark-os.com/oauth/callback/google

GITHUB_CLIENT_ID=CHANGE_ME_YOUR_GITHUB_CLIENT_ID
GITHUB_CLIENT_SECRET=CHANGE_ME_YOUR_GITHUB_CLIENT_SECRET
GITHUB_REDIRECT_URI=https://api.zoark-os.com/oauth/callback/github

MICROSOFT_CLIENT_ID=CHANGE_ME_YOUR_MICROSOFT_CLIENT_ID
MICROSOFT_CLIENT_SECRET=CHANGE_ME_YOUR_MICROSOFT_CLIENT_SECRET
MICROSOFT_REDIRECT_URI=https://api.zoark-os.com/oauth/callback/microsoft

# Monitoring & Logging
SENTRY_DSN=https://CHANGE_ME_YOUR_SENTRY_KEY@sentry.io/PROJECT_ID
LOG_LEVEL=INFO
ENVIRONMENT=production

# AWS (Optional - for backups)
AWS_ACCESS_KEY_ID=CHANGE_ME_YOUR_AWS_KEY
AWS_SECRET_ACCESS_KEY=CHANGE_ME_YOUR_AWS_SECRET
AWS_REGION=us-east-1
S3_BACKUP_BUCKET=zoark-os-backups

# Application Settings
APP_NAME=ZOARK OS
APP_VERSION=1.0.0
DEBUG=false
WORKERS=4

# Rate Limiting
RATE_LIMIT_PER_MINUTE=120
RATE_LIMIT_PER_HOUR=3000

# Database Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Redis Connection Pool
REDIS_POOL_SIZE=10
REDIS_POOL_TIMEOUT=5

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
REFRESH_TOKEN_EXPIRY_DAYS=7

# File Upload Configuration
MAX_UPLOAD_SIZE_MB=50
ALLOWED_UPLOAD_EXTENSIONS=pdf,doc,docx,xls,xlsx,txt,csv,json,xml,zip

# Feature Flags
ENABLE_OAUTH=true
ENABLE_CUSTOM_AGENTS=true
ENABLE_RAG_SEARCH=true
ENABLE_EMAIL_INTEGRATION=true
ENABLE_BROADCAST=true
ENABLE_MONITORING=true

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# API Documentation
ENABLE_API_DOCS=true
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true
